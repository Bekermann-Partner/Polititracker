model User {
  id Int @id @default(autoincrement())

  firstName String
  lastName  String

  email    String @unique
  password String

  profile_image String @default("default_avatar.jpg")

  isAdmin Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  isFollowing Follow[]
  comments    Comment[]
}
